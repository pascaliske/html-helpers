{
  "name": "@pascaliske/html-helpers",
  "description": "Collection of helper functions for HTML.",
  "version": "1.3.0",
  "license": "MIT",
  "author": {
    "name": "Pascal Iske",
    "email": "info@pascal-iske.de",
    "url": "https://pascal-iske.de"
  },
  "repository": {
    "url": "https://github.com/pascaliske/html-helpers.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/pascaliske/html-helpers/issues"
  },
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "rollup --config rollup.config.ts",
    "watch": "rollup --config rollup.config.ts --watch",
    "postbuild": "tsc --declaration --outDir dist --emitDeclarationOnly src/index.ts",
    "lint": "tslint --project tsconfig.json --fix",
    "test": "nyc ava tests/**/*.test.js",
    "check": "snyk test",
    "format": "prettier --write \"src/**/*.ts\"",
    "changelog": "standard-changelog --release-count 1"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "tslib": "^1.9.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@types/classnames": "^2.2.7",
    "ava": "^1.4.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "nyc": "^14.0.0",
    "prettier": "^1.16.4",
    "rollup": "^1.10.0",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-terser": "^4.0.4",
    "rollup-plugin-typescript2": "^0.20.1",
    "snyk": "^1.147.4",
    "standard-changelog": "^2.0.7",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.2"
  }
}
